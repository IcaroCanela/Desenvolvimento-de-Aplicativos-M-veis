<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="397dp"
            android:layout_height="588dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewTÃ­tulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LISTA DE TAREFAS"
                app:autoSizeTextType="none" />

            <EditText
                android:id="@+id/editTextPersonTarefa"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Adicione  a sua tarefa" />

            <Button
                android:id="@+id/btAlterarTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATUALIZAR TAREFA" />

            <Button
                android:id="@+id/btAdicionarTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Adicionar Tarefa" />

            <ListView
                android:id="@+id/listViewTarefas"
                android:layout_width="405dp"
                android:layout_height="360dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>